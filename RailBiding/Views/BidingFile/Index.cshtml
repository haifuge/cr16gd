<div class="left-nav">
    <div class="left-nav-con">
        <h1> 招标文件</h1>
        <ul class="left-nav-list">
            <li> <a href='/BidingFile' class='active'> <i class='icon icon-eye1'> </i> 招标文件</a> </li>
            <li> <a href='/BidingFile/FileApprove'> <i class='icon icon-hand3'> </i> 文件审批</a> </li>
        </ul>
    </div>
</div>
<div class="main-con">
    <div class="main-wrap">
        <div class="main-top">
            <div class="search-con2">
                <input type="text" name="keyname" placeholder="请输入关键字">
                <a class="search-btn"> <i class="search-icon meet-icon"> </i> </a>
            </div>
        </div>
        <div class="wc-container szwc-container">
            <table class="meet-table text-left">
                <thead class="wc-header">
                    <tr>
                        <td class="check-color" style="width:20px;padding:0px 5px"> <span class="table-all-check"> <input type="checkbox" class="icheck" name="all-check" id="all-check" / > </span> </td>
                        <td style="width:150px;padding:0px 5px"> 项目名称</td>
                        <td style="width:300px;padding:0px 5px"> 招标文件内容概述</td>
                        <td style="width:80px;padding:0px 5px"> 提交人</td>
                        <td style="width:100px;padding:0px 5px"> 发布时间</td>
                    </tr>
                </thead>
                <tbody id="tbBidingFiles"> </tbody>
            </table>
            <div class="page"> </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/jquery-1.11.0.js">
</script>
<script type='text/javascript' src='~/js/jquery-ui.min.js'></script>
