<script type='text/javascript' src='~/js/js.js'></script>
<script>
    //分页点击
    var cur_num = 1
    var clickpagenum = "" //所点击页码
    //当前所在页码
    var nowpage = 1;
    var page_size = 10
    var pagenum = 12
    Paginator(nowpage, page_size)

    function Paginator(page, ps) {
        $.post("/BidingFile/GetBidingFiles", { pageSize: ps, pageIndex: page }, function (data) {
            if (data == 'no session') {
                location.href = "/Login";
            }
            var jsonData = JSON.parse(data);
            var obj = jsonData.List;
            console.log(jsonData)
            var htm = "";
            for (var i = 0; i < obj.length; i++) {
                var o = obj[i]
                htm += '<tr class="white-bg" onclick = "location.href=\'/BidingFile/FileDetail?pid=' + o.id + '\';" >' +
                    '<td class="check-color"><input class="icheck" name="id" type="checkbox" value="' + o.id + '" id="checkbox-1"/></td>' +
                    '<td>' + o.name + '</td>' +
                    '<td>' + o.content + '</td>' +
                    '<td>' + o.publisher + '</td>' +
                    '<td>' + o.publishdate + '</td>' +
                    '</tr >'
            }
            $("#tbBidingFiles").html(htm);
            console.log(page, jsonData.PageCount, jsonData.total, ps)
            pages(page, jsonData.PageCount, jsonData.total, ps)
        });
    }
</script>
