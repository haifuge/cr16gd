<style>
    #tbBidingFiles tr > td {
        height: auto;
        padding: 0px 5px;
    }
        .meet-table tr:last-of-type{
         border-top: 1px solid #d9d9d9;
         border-bottom: 1px solid #d9d9d9;
    }


    #tbBidingFiles tr > td:nth-child(3) {
        height: 80px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        display: -moz-box;
        border-top: none;
        border-bottom: none;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
