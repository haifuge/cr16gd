            $(".js-feed-count").html(comlenght);

            if($("#passlineInfo").html()==""){
                $(".feedback-item.js-myattend").hide()
            }else{
                $(".feedback-item.js-myattend").show()
            }

            if($("#declineInfo").html()==""){
                $(".feedback-item.decfeedback-item").hide()
            }else{
                $(".feedback-item.decfeedback-item").show()
