<div class="main-con">
    <div class="main-wrap">
        <div class="main-top">
            <a class="meet-btn blue-btn sm-btn" href="javascript:;" onclick="allcompany()">全部</a>
            <select class="meet-select js-meet-state" id="bType"></select>
            <div class="search-con2">
