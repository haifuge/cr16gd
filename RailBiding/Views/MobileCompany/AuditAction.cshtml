
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>中国铁建房地产行政办公系统</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <link rel="shortcut icon" href="/favicon.ico">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link rel="stylesheet" href="~/cssMobile/light/light7.min.css">
    <link rel="stylesheet" href="~/cssMobile/phone.css" />
    <link href="~/css/sweetalert2.css" rel="stylesheet" />
    <script type='text/javascript' src='~/jsMobile/jquery.js'></script>

</head>

<body>
    <div class="page-group">
        <div class="page page-current">
            <header class="bar bar-nav meetp-nav">
                <div class="meetp-header">
                    <a href="index.html"><img src="~/imgMobile/logo.png" /></a><span class="span1">@ViewBag.UserName</span><span class="span2">
                        <a href="login.html">
                            <img src="~/imgMobile/loginout-icon.png" alt="">
                        </a>
                    </span>
                </div>
                <div class="meetp-bar">
                    <a class="button button-link button-nav pull-left back" href="#" onclick="winHistory()">
                        <span class="icon icon-left"></span>
                    </a>
                    <h1 class="title">企业审批-审批意见</h1>
                </div>
            </header>
            <div class="content native-scroll audit">
                <textarea id="auditaction-con" placeholder="请输入审批意见"></textarea>
                <div class="row btn-row">
                        <a href="#" onclick="Application()" class="button active">确认</a>
                </div>
            </div>
        </div>
    </div>
    <script type='text/javascript' src='~/jsMobile/jquery-1.11.0.js' charset='utf-8'></script>
    <script type='text/javascript' src='~/jsMobile/light/light7.min.js' charset='utf-8'></script>
    <script type="text/javascript" src="~/jsMobile/js.js"></script>
    <script src="~/js/sweetalert2.all.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script>
        function getQueryString(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
            var r = window.location.search.substr(1).match(reg); //获取url中"?"符后的字符串并正则匹配
            var context = "";
            if (r != null)
                context = r[2];
            reg = null;
            r = null;
            return context == null || context == "" || context == "undefined" ? "" : context;
        }
        getQueryString("type");
        console.log(getQueryString("type"))
        function Application() {

            var feedback = $("#auditaction-con").val()
            if(getQueryString("type")==1){
                if (confirm("确定通过该申请？"))
                {
                    $(".deal-apply-btn.deal-apply-btn2").hide();
                    $(".right-block").hide();
                    $(".apply-opt a.js-cancle-meet:nth-child(1)").hide();
                    $.post("/Common/UpdateApproveProcess", { apid: @ViewBag.apid, oid: @ViewBag.cid, astatus: 2, comment: feedback }, function () {
                        location.href = "/MobileList?type=1"
                    })
                }
            }else{
                if (feedback =="") {
                    alert("请填写驳回理由！");
                    return;
                }
                if (confirm("确定驳回该申请？"))
                {
                    $(".deal-apply-btn.deal-apply-btn2").hide();
                    $(".right-block").hide();
                    $(".bohui").hide();
                    $.post("/Common/UpdateApproveProcess", { apid: @ViewBag.apid, oid: @ViewBag.cid, astatus: 3, comment: feedback }, function () {
                        location.href = "/MobileList?type=1"
                    })
                }
            }
        }

        function winHistory(){
            window.history.go(-1)
        }

    </script>
</body>
</html>