
@{
    ViewBag.Title = "项目详情";
}


<link rel="stylesheet" href="~/css/icheck/minimal/minimal.css" />
<link rel="stylesheet" href="~/css/sweetalert/sweetalert.css" />
<link rel="stylesheet" href="~/css/style.css" />
<style type="text/css">
    * {
        margin: 0;
        padding: 0;
    }

    a {
        text-decoration: none;
        color: #000000;
    }

    .icon-sq {
        width: 135px;
        background-image: url(img/icon-dc.png);
        background-repeat: no-repeat;
        background-position: 3px center;
        /*color: #008cd6;*/
    }

    .project_details {
        width: 100%;
        height: 50px;
        line-height: 50px;
        display: block;
        background: #eaf6fd;
        font-size: 16px;
        position: relative;
    }

    .title_txt {
        color: #999999;
        margin-left: 50px;
    }

    .content_txt {
        color: #000000;
    }

    .Transformation {
        color: #008cd6;
        position: absolute;
        right: 10px;
        top: 1px;
        font-size: 40px;
    }

    .clearfix:after {
        display: block;
        visibility: hidden;
        clear: both;
        height: 0;
        content: ".";
    }

    .wc-details {
        width: 100%;
        background: #f2f2f2;
        font-size: 16px;
        margin-top: 5px;
        padding: 10px 8px;
        box-sizing: border-box;
        position: relative;
        display: none;
    }

        .wc-details dl {
            width: 100%;
        }

            .wc-details dl dt {
                width: 10%;
                float: left;
                margin: 0 auto;
                text-align: center;
                vertical-align: middle;
                position: absolute;
                top: 45%;
                color: #999999;
            }

            .wc-details dl dd {
                width: 90%;
                float: left;
                margin-left: 10%;
                line-height: 25px;
                font-size: 14px;
            }

    .state_bidding {
        margin-top: 10px;
    }

    .state_bidding_list dl dt {
        color: #29a9ef;
        font-size: 16px;
    }

        .state_bidding_list dl dt span {
            color: #999999;
            font-size: 14px;
        }

    .state_bidding_list dl dd {
        height: 85px;
        border: 1px solid #b3b3b3;
        margin-top: 10px;
    }

        .state_bidding_list dl dd div {
            border-right: 1px solid #b3b3b3;
            padding: 10px;
            height: 100%;
            float: left;
            box-sizing: border-box;
        }

        .state_bidding_list dl dd .state_bidding_con {
            width: 65%;
        }

        .state_bidding_list dl dd .state_bidding_enclosure {
            width: 25%;
        }

            .state_bidding_list dl dd .state_bidding_enclosure ul li {
                line-height: 20px;
                background: url(img/icon-file.png) no-repeat;
                padding-left: 20px;
                vertical-align: middle;
            }

        .state_bidding_list dl dd .state_bidding_show {
            width: 10%;
            padding-top: 34px;
            text-align: center;
        }

            .state_bidding_list dl dd.state_bidding_show span {
                display: inline-block;
            }
    /*审核中*/
    .to_examine {
        color: #e60012;
        border: 1px solid #f99377;
        padding: 5px 10px;
    }
    /*被驳回*/
    .reject {
        color: #e60012;
        border: 1px solid #e60012;
        padding: 5px 10px;
    }
    /*未提交*/
    .Unsubmitted {
        color: #ff931e;
        border: 1px solid #ff931e;
        padding: 5px 10px;
    }
    /*通过*/
    .adopt {
        color: #11b114;
        border: 1px solid #11b114;
        padding: 5px 10px;
    }


    /*招标文件申请*/
    .tendering_apply {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(188,199,210,.5);
        z-index: 9999;
        display: none;
    }

    .tendering_content {
        width: 650px;
        height: 450px;
        background: #ffffff;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
    }

    .tendering_nav {
        width: 100%;
        height: 40px;
        line-height: 40px;
        background: #eaf6fd;
        position: relative;
        /*padding:5px;*/
        box-sizing: border-box;
    }

        .tendering_nav span {
            display: inline-block;
        }

        .tendering_nav .tendering_nav_title {
            color: #29a9ef;
            font-size: 16px;
            margin-left: 20px;
        }

    .tendering_close {
        width: 40px;
        height: 40px;
        position: absolute;
        /*background: url(img/btn-close.png) no-repeat;*/
        right: 0;
        top: 0;
        text-align: center;
        cursor: pointer;
        color: #29a9ef;
        font-size: 35px;
    }

    .tendering_describe {
        width: 100%;
        height: 200px;
        padding-top: 20px;
    }

        .tendering_describe dl {
            width: 100%;
        }

            .tendering_describe dl dt {
                width: 10%;
                float: left;
                /*display: inline-block;*/
                padding: 5px;
                margin-right: 10px;
            }

            .tendering_describe dl dd {
                width: 80%;
                float: left;
                border: 1px solid #d7d7d7;
                border-radius: 5px;
                padding: 10px;
                /*display: inline-block;*/
            }

    .tendering_file .bidding_documents {
        width: 10%;
        float: left;
        text-align: center;
        background: url(img/icon-fj.png) no-repeat;
        padding-left: 15px;
        margin-left: 5px;
    }

    .tendering_file .bidding_documents_details {
        width: 80%;
        float: left;
        margin-left: 10px;
    }

    .bidding_documents_details input[type="file"] {
        opacity: 0;
        width: 35px;
        height: 35px;
        position: absolute;
        left: 0;
        cursor: pointer;
    }

    .bidding_documents_details .uploading_files {
        position: relative;
        display: inline-block;
        text-align: center;
        width: 35px;
        height: 35px;
        /*line-height: 30px;*/
        background: url(img/icon-add2.png) no-repeat;
        cursor: pointer;
    }

    .bidding_documents_details ul li > a {
        margin-left: 5px;
        color: #29a9ef;
    }

    .tendering_btn {
        width: 100%;
        height: 50px;
        text-align: center;
        vertical-align: middle;
        line-height: 50px;
        margin-top: 20px;
    }

        .tendering_btn a {
            display: inline-block;
            width: 50px;
            height: 30px;
            line-height: 30px;
            color: #ffffff;
            margin: 0 5px;
        }

        .tendering_btn .submission_btn, .preservation_btn {
            background: #29a9ef;
        }

        .tendering_btn .return_btn {
            background: #bfbdba;
        }
</style>

