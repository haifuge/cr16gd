<script>
    // 伸缩详情页内容
    $(".project_details").on("click", function () {
        $(".wc-details").toggle();
        $(".Transformation").toggle();
    })
    // 招标文件申请
    $(".tendering_close").on("click", function () {
        $(".tendering_apply").hide();
    })
    $(".js-cancle-meet").on("click", function () {
        $(".tendering_apply").show();
    })
</script>
