<script type="text/javascript" language="javascript">
    $(function () {

        $("#bfup").change(function () {
            $("#bfupform").ajaxSubmit(function (res) {
                var names = res.split('|')
                var li = document.createElement("li");
                li.id = names[0].trim()
                li.innerHTML = names[1] + '<a href = "#" style = "color: #008cd6;margin-left: 5px;" onclick="deleteFile(\'' + names[0].trim() + '\')" > 删除</a>'
                document.getElementById("bffiles").appendChild(li)
            });
        })
    })
    function bidSubmit(ss) {
        var adate = $("#applydate").val()
        var odate = $("#opendate").val()
        var bnum = $("#bidingnum").val()
        var pid =@ViewBag.ProjId;
        data = { adate: adate, odate: odate, bnum: bnum, pid: pid, status: ss }
        $.post("/Projects/AddBid", data, function (res) {
            if (res) {
                if(ss==1)
                    swal('提交成功！')
                else
                    swal('保存成功！')
                location.reload(true);
            }
            else {
                swal('保存失败，请稍后再试！')
            }
        })
    }
    function bidfileSubmit(ss) {
        var bfc = $("#bfcontent").val();
        var pid =@ViewBag.ProjId;
        data = { content: bfc, pid: pid, status: ss }
        $.post("/Projects/AddBidFile", data, function (res) {
            if (res) {
                if(ss==1)
                    swal('提交成功！')
                else
                    swal('保存成功！')
                location.reload(true);
            }
            else {
                swal('保存失败，请稍后再试！')
            }
        })
    }
    function deleteFile(name) {
        console.log(name);
        var li = document.getElementById(name)
        li.parentNode.removeChild(li);
        $.post("/Common/FileDelete", { fname: name }, function () {});
    }

    $(".canvas_close").on("click", function () {
        $(".canvas").hide();  
    })
    $(".backcolse-btn").on("click", function () {
        $(".canvas").hide();
    })


    function bidApply() {
        $("#bidapplylayer").show();
        $.get("/Projects/GetBidInfo?pid=@ViewBag.ProjId", function (data) {
            var obj = JSON.parse(data);
            $("#applydate").html(obj.applydate)
            $("#opendate").html(obj.opendate)
            $("#bidingnum").html(obj.bidingnum)
        });
        $.get("/Projects/GetFiles?pid=@ViewBag.ProjId&ftype=2", function (data) {
            var obj = JSON.parse(data);
            for (var i = 0; i < obj.length; i++) {
                var li = document.createElement('li');
                li.id = obj[i].filepath
                li.innerHTML = obj[i].filename + '<a href = "#" style = "color: #008cd6;margin-left: 5px;" onclick="deleteFile(\'' + obj[i].filepath + '\')" > 删除</a>';
                document.getElementById("bffiles").appendChild(li)
            }
        });
    }
    function bidFileApply() {
        $("#bidfileapplylayer").show();
        $.get("/Projects/GetBidFileInfo?pid=@ViewBag.ProjId", function (data) {
            $("#bfcontent").html(data)
        });
        $.get("/Projects/GetFiles?pid=@ViewBag.ProjId&ftype=2", function (data) {
            console.log(data)
            //$("#bffiles").html(data);
            var obj = JSON.parse(data);
            for (var i = 0; i < obj.length; i++) {
                var li = document.createElement('li');
                li.id = obj[i].filepath
                li.innerHTML = obj[i].filename + '<a href = "#" style = "color: #008cd6;margin-left: 5px;" onclick="deleteFile(\'' + obj[i].filepath + '\')" > 删除</a>';
                document.getElementById("bffiles").appendChild(li)
            }
        });
    }
</script>
<script>
    // 伸缩详情页内容
    $(".project_details").on("click", function () {
        $(".wc-details").toggle();
        $(".Transformation").toggle();
    })

    $(function () {
        var Accordion = function (el, multiple) {
            this.el = el || {};
            this.multiple = multiple || false;

            // Variables privadas
            var links = this.el.find('.link');
            // Evento
            links.on('click', { el: this.el, multiple: this.multiple }, this.dropdown)
        }

        Accordion.prototype.dropdown = function (e) {
            var $el = e.data.el;
            $this = $(this),
                $next = $this.next();

            $next.slideToggle();
            $this.parent().toggleClass('open');

            if (!e.data.multiple) {
                $el.find('.submenu').not($next).slideUp().parent().removeClass('open');
            }
            ;
        }

        var accordion = new Accordion($('#accordion'), false);
    });

</script>
