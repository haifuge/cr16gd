<script src="~/js/jquery.cookie.js"></script>

<script>
    $(function () {
        var activeM =@ViewBag.ActiveMenu;
        activeM.className = "active"
        $("#department").text($.cookie("UserDepartment"))
        $("#name").text($.cookie("UserName"))
    });

    function logout() {
        if (confirm("要确定退出系统么？")) {
            window.location.href = "/Login";
        }
    }

</script>