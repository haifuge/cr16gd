
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>邀标</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        * {
            padding: 0px;
            margin: 0px;
        }

        html, body {
            width: 100%;
            height: 100%;
            font-size: 16px;
        }

        .bid-page {
            max-width: 640px;
            min-width: 320px;
            padding: 20px 20px 100px;
            margin: 0px auto;
        }

            .bid-page .m-logo {
                display: block;
                margin: 0 auto
            }

            .bid-page h4 {
                width: 100%;
                font-size: 22px;
                margin-top: 10px;
                margin-bottom: 10px;
                text-align: center;
            }

        .bid-table {
            width: 100%;
        }

            .bid-table tr {
                display: block;
                margin-bottom: 8px;
            }

                .bid-table tr td:nth-child(1) {
                    vertical-align: top;
                    color: #008cd6;
                    width: 80px;
                    padding-right: 5px;
                    text-align: right;
                }

        .bid-btn {
            margin-top: 30px;
        }

            .bid-btn ul {
                list-style-type: none;
                text-align: center;
            }

                .bid-btn ul li {
                    display: inline-block;
                    width: 120px;
                    padding: 5px 0px;
                    text-align: center;
                }

                    .bid-btn ul li:nth-child(2) {
                        margin-left: 40px;
                    }

                    .bid-btn ul li a {
                        color: #fff;
                        padding: 8px 0px;
                        display: block;
                        position: relative;
                        width: 120px;
                        border-radius: 3px;
                        text-decoration: none;
                    }

                        .bid-btn ul li a:hover, .bid-btn ul li a:focus {
                            text-decoration: none;
                        }

        .bid-greenbtn {
            background: green;
        }

        .bid-redbtn {
            background: red;
        }
    </style>
</head>
<body>
    <div class="bid-page">
        <img src="~/imgMobile/m-logo.jpg" alt="中国铁建" class="m-logo" />
        <h4>中铁十六局集团北京轨道交通工程建设有限公司</h4>
        <h4>劳务招标系统</h4>
        <table class="bid-table">
            <tr>
                <td>项目名称:</td>
                <td>@ViewBag.PName</td>
            </tr>
            <tr>
                <td>项目地点:</td>
                <td>@ViewBag.PLocation</td>
            </tr>
            <tr>
                <td>项目类型:</td>
                <td>@ViewBag.ProjType</td>
            </tr>
            <tr>
                <td>申请时间:</td>
                <td>@ViewBag.ApplyDate</td>
            </tr>
            <tr>
                <td>开始时间:</td>
                <td>@ViewBag.OpenDate</td>
            </tr>
            <tr>
                <td>项目说明:</td>
                <td>@Html.Raw(ViewBag.PDescription)</td>
            </tr>
        </table>
        <div class="bid-btn">
            <ul>
                <li><a href="#" class="bid-redbtn" onclick="response(2)">不参加</a></li>
                <li><a href="#" class="bid-greenbtn" onclick="response(1)">参加</a></li>
            </ul>
        </div>
    </div>
</body>
</html>
<script src="~/jsMobile/jquery-1.11.0.js"></script>
<script>
    
    $.get("/MobileInviteBiding/GetBidDetail?pid=@ViewBag.ProjId", {}, function (res) {
        var jsonData = JSON.parse(res);

        $(".bid-table tr:nth-child(1) td:nth-child(2)").html(jsonData[0].name)
        $(".bid-table tr:nth-child(2) td:nth-child(2)").html(jsonData[0].location)
        $(".bid-table tr:nth-child(3) td:nth-child(2)").html(jsonData[0].projtype)
        $(".bid-table tr:nth-child(4) td:nth-child(2)").html(jsonData[0].applydate)
        $(".bid-table tr:nth-child(5) td:nth-child(2)").html(jsonData[0].opendate)
        $(".bid-table tr:nth-child(6) td:nth-child(2)").html(jsonData[0].prodescription)
    })
    function response(res) {
        $.post("/Common/ResponseInvite?cid=@ViewBag.CompanyId&pid=@ViewBag.ProjId&token=@ViewBag.Token&res=" + res, {}, function () {
            if (res == 1) {
                alert('您已参加竞标')
            }
            else {
                alert('您已拒绝参加竞标')
            }
        });
    }
</script>
