<script>
    //分页点击
    var cur_num = 1
    var clickpagenum = "" //所点击页码
    //当前所在页码
    var nowpage = 1;
    var page_size = 10
    var pagenum = 12
    Paginator(nowpage, page_size)

    function Paginator(page, ps) {    
        $.post("/Statistic/GetCompaniesStatistic", { pageSize: ps, pageIndex: page }, function (data) {
            console.log(data)
            var jsonData = JSON.parse(data);
            var obj = jsonData.List;
            
            var htm = "";
            for (var i = 0; i < obj.length; i++) {
                var o = obj[i];
                htm += '<tr class="white-bg" onclick="location.href=\'/Statistic/StatisticDetail?cid=' + o.id +'\'; " style = "cursor: pointer" >'+
                    '<td class="check-color"><input class="icheck" name="id" type="checkbox" value="'+o.id+'" id="checkbox-1" /></td>'+
                    '<td>' + o.name + '</td>' +
                    '<td>' + o.jointimes + '</td>' +
                    '<td>' + o.nojointimes + '</td>' +
                    '<td>' + o.winbids + '</td>' +
                    '<td class="gray-time">' + o.nowinbids + '</td>' +
                    '<td class="gray-time">' + o.lastjoindate + '</td>' +
                    '</tr >';
            }
            $("#tbCompany").html(htm);
            console.log(page, jsonData.pagecount, jsonData.total, ps)
            pages(page, jsonData.pagecount, jsonData.total, ps)
        });
        
    }
</script>
