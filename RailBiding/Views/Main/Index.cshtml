<script src="~/js/jquery.cookie.js"></script>
<script>
    $(function () {
        if (@ViewBag.RoleId== 4) {
            $(".sp-list-right").html("");
            //$("a[name='rightPart']").css("display", 'none');
            $(".in-box-top ").css("display","none")
            $(".index-center").css("padding-top","0px")
            $(".index-center .index-box").css({"height":"auto","margin-top":"6%"})

        }
        if (@ViewBag.RoleId== 5) {
            $(".sp-list-right").html("");
         
            //$("a[name='rightPart']").css("display", 'none');
            $(".in-box-top ").css("display","none");
            $(".hid4").attr("href","javascript:;");
            $(".index-center").css("padding-top","0px")
            $(".index-center .index-box").css({"height":"auto","margin-top":"6%"})
            
        }
        $("#department").text($.cookie("UserDepartment"))
        $("#name").text($.cookie("UserName"))

        $.get("/Main/GetToBeDone", {}, function (data) {
            var obj = JSON.parse(data);
            for (var i = 0; i < obj.length; i++) {
                var o = obj[i];
                if(o.appprocid==1){
                    $(".num-one").html(o.company)
                }
                if(o.appprocid==2){
                    $(".num-two").html(o.bidfile)
                }
                if(o.appprocid==3){
                    $(".num-three").html(o.b)
                }
                if(o.appprocid==4){
                    $(".num-four").html(o.mb)
                }
            }

        })
    });
 
</script>